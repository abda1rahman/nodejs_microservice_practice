{
    "compilerOptions": {
      "module": "NodeNext",
      "esModuleInterop": true,
      "target": "ESNext",
      "moduleResolution": "nodenext",
      "sourceMap": true,
      "outDir": "dist",
      "strict": false,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*.ts", "src/types/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }