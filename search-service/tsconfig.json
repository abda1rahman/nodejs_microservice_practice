{
    "compilerOptions": {
      "module": "NodeNext",
      "esModuleInterop": true,
      "target": "ESNext",
      "moduleResolution": "nodenext",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": false,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
      "files": true
    }
  }